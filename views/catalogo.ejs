<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="./styles/catalogo.css" />
    <title>Espaço Abeliano</title>
  </head>
  <body>
    <%- include('./partials/navbar.ejs') %>

    <div class="container">
      <div class="row my-3">
        <div class="col">
          <h1 class="fw-bold text-center">Catálogo</h1>
        </div>
      </div>

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 my-3">
        <% products.forEach(product => { %>

        <div class="col d-flex align-items-strech">
          <div class="card w-100 shadow-sm">
            <div id="carousel<%=product._id%>" class="carousel slide">
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img src="<%=product.imagens[0]%>"" class="d-block w-100"
                  alt="toro" height="200" />
                </div>
                <div class="carousel-item">
                  <img
                    src="<%=product.imagens[1]%>"
                    class="d-block w-100"
                    alt="cnc"
                    height="200"
                  />
                </div>
                <div class="carousel-item">
                  <img
                    src="<%=product.imagens[2]%>"
                    class="d-block w-100"
                    alt="cad"
                    height="200"
                  />
                </div>
              </div>
              <button
                class="carousel-control-prev"
                type="button"
                data-bs-target="#carousel<%=product._id%>"
                data-bs-slide="prev"
              >
                <span
                  class="carousel-control-prev-icon"
                  aria-hidden="true"
                ></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button
                class="carousel-control-next"
                type="button"
                data-bs-target="#carousel<%=product._id%>"
                data-bs-slide="next"
              >
                <span
                  class="carousel-control-next-icon"
                  aria-hidden="true"
                ></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>
            <div class="card-body">
              <p class="text-center card-text fs-5"><%=product.nome%></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a
                    type="button"
                    class="btn btn-sm btn-success"
                    href="./produto/<%=product._id%>"
                  >
                    Acessar
                  </a>
                  <a
                    type="button"
                    class="btn btn-sm btn-outline-danger"
                    href="./editar/<%=product._id%>"
                  >
                    Editar
                  </a>
                </div>
                <small class="text-body-secondary text-capitalize"
                  >Categoria: <%=product.categoria%></small
                >
              </div>
            </div>
          </div>
        </div>
        <%}); %>
      </div>
    </div>

    <%- include('./partials/rodape.ejs') %>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
